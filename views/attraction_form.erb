<h1 class="title">Attractions</h1>

<h3>Click to edit</h3>
<% if @attractions.any?() %>
<ul>
  <% @attractions.each do |attraction| %>
  <li><a href="/attractions/<%= attraction.id() %>/edit"><%= attraction.name() %></a></li>
  <% end %>
</ul>
<% else %>
<p>There are no attractions yet!</p>
<% end %>
<br>



<h3>Add New Attraction</h3>
<form action="/attraction_form" method="post">
  <div class="form-group">
    <label class="form-label" for='name'>Name:</label>
    <input class="form-control" id='name' name='name' type="text">

    <label class="form-label" for='description'>Description:</label>
    <input class="form-control" id='description' name='description' type="text">

    <label class="form-label" for='price'>Price:</label>
    <input class="form-control" id='price' name='price' type="text">
    <br>
    <h5>Seasons:</h5>
    <div class="checkbox">
      <label><input type="checkbox" name="seasons[]" value="Winter">  Winter</label>
    </div>
    <div class="checkbox">
      <label><input type="checkbox" name="seasons[]" value="Spring">  Spring</label>
    </div>
    <div class="checkbox">
      <label><input type="checkbox" name="seasons[]" value="Summer">  Summer</label>
    </div>
    <div class="checkbox">
      <label><input type="checkbox" name="seasons[]" value="Fall">  Fall</label>
    </div>

    <input type="hidden" name="_method" value="patch">
    <br>
    <h5>Add Tags:</h5>
    <% @tags.each do |tag| %>
      <div class="checkbox">
        <label for="add_tags">
          <input type="checkbox" name="tag_ids[]" value="<%= tag.id %>"> <%= tag.name %><br>
        </label>
      </div>
    <% end %>
    <button type="submit">Add</button>
  </div>
</form>
<br>
